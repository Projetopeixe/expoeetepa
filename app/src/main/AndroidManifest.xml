<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="samuel.developer.waiwai">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.fases.Fase3"></activity>
        <activity android:name=".activity.fases.Fase2" />
        <activity android:name=".activity.TraducaoPalavraDic" />
        <activity
            android:name=".activity.ActivityDicionario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TelaCarregamento"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.FinishGame"
            android:parentActivityName=".activity.ActivityPrincipal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ActivitySobre"
            android:parentActivityName=".activity.ActivityPrincipal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.fases.Fase1"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ConfiguracaoContaActivity"
            android:parentActivityName=".activity.ActivityPrincipal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ActivityPrincipal"
            android:label="@string/title_activity_principal"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CadastroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
    </application>

</manifest>